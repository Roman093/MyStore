@model IEnumerable<ProductViewModel>
@*@model ProductListViewModel*@
@using NLayerApp.WEB.HtmlHelpers
@using NLayerApp.WEB.Models


@{

    ViewBag.Title = "Index";
}

@*<h2>Store</h2>*@
<link href="~wwwroot/css/bootstrap.css" rel="stylesheet" type="text/css" />
<div class="row" mt-5 mb-2">
    @foreach (var p in Model)
    {
    <div class="col-lg-4">
        <img class=" img-thumbnail" src="@p.img" accesskey="@p.Name" />
        <h3>

            @Html.DisplayFor(modelP => p.Name)
        </h3>
        @*<td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>*@

        <h4>
            @p.Price.ToString("# $")
        </h4>
        <td>
            @Html.ActionLink("Order", "MakeOrder", new { id = p.Id })
        </td>
    </div>
    }
</div>

