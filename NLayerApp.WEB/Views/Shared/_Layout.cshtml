<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/wwwroot/css/bootstrap.css" rel="stylesheet" />
    <link href="~/wwwroot/css/bootstrap-theme.css" rel="stylesheet" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/wwwroot/css")
    @Scripts.Render("~/bundles/modernizr")
</head>


<body>
    <div class="navbar navbar-inverse" role="navigation">
        <a class="navbar-brand" href="#">Store - магазин смартфонов</a>
    </div>
    <div class="row panel">
        <div id="productDtos" class="col-xs-3">
            @Html.Action("Menu", "Nav")
        </div>
        <div class="col-xs-8">
            @RenderBody()
        </div>
    </div>
</body>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/wwwroot/javascript/bootstrap.js")
@RenderSection("scripts", required: false)
<footer>@RenderSection("Footer", false)</footer>
</html>
